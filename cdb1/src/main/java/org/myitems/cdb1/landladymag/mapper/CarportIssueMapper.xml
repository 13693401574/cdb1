<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.myitems.cdb1.landladymag.mapper.CarportIssueMapper">
	
	<resultMap type="CarportIssueBean" id="carportIssueMap">
		<id property="id" column="id" javaType="java.lang.Long"/>
		<result property="startTime" column="startTime" javaType="java.sql.Date"/>
		<result property="endTime" column="endTime" javaType="java.sql.Date"/>
		<result property="price" column="price" javaType="java.lang.String"/>
		<result property="status" column="status" javaType="java.lang.String"/>
		
		<association property="appBean" javaType="CarportApplicationBean" column="fkCarportApplicationId" fetchType="eager" select="org.myitems.cdb1.landladymag.mapper.CarportApplicationMapper.getCarportApplicationById"></association>
		<association property="landlady" javaType="LandladyBean" column="fkLandladyId" fetchType="eager" select="org.myitems.cdb1.landladymag.mapper.LandladyMapper.getLandladyById"></association>
	</resultMap>
	
	
	<select id="getCountCarportIssueListByItems" resultType="int">
		select count(*) from t_carportIssue
		<include refid="commonSql"></include>
		
	</select>
	<select id="getCarportIssueListByItems" resultMap="carportIssueMap">
		select * from t_carportIssue
		<include refid="commonSql"></include>
	</select>

	<sql id="commonSql">
		<where>
			<if test="map.fkLandladyId != null">
				and fkLandladyId=#{map.fkLandladyId}
			</if>
			<if test="map.startTime !=null">
				<![CDATA[
					and startTime >=#{map.startTime}
				]]>
				
			</if>
			<if test="map.endTime !=null">
				<![CDATA[
					and endTime <=#{map.endTime}
				]]>	
			</if>
			<if test="map.status!=null">
				and status=#{map.status}
			</if>
		</where>
		
	</sql>
	
</mapper>